<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:orientation="vertical"
        android:paddingHorizontal="16dp"
        android:paddingTop="32dp"
        android:paddingBottom="32dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@id/manualCheckinButton">

        <!-- Title -->
        <TextView
            android:id="@+id/appTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="UWS Student Attendance"
            android:textSize="24sp"
            android:textStyle="bold"
            android:textColor="#000000"
            android:gravity="center"/>

        <!-- Status Card -->
        <androidx.cardview.widget.CardView
            android:id="@+id/statusCard"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="36dp"
            app:cardCornerRadius="12dp"
            app:cardElevation="0dp">

            <LinearLayout
                android:id="@+id/statusLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="12dp"
                android:background="#F0FFF0"
                android:gravity="center_vertical">

                <ImageView
                    android:id="@+id/statusIcon"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:src="@drawable/ic_map"
                    app:tint="#38A169"
                    android:contentDescription="Status Icon" />

                <TextView
                    android:id="@+id/statusText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="You are currently on campus"
                    android:textColor="#38A169"
                    android:textSize="16sp"
                    android:layout_marginStart="8dp"/>
            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <!-- Map Card -->
        <androidx.cardview.widget.CardView
            android:id="@+id/mapCard"
            android:layout_width="match_parent"
            android:layout_height="400dp"
            android:layout_marginTop="36dp"
            app:cardCornerRadius="12dp"
            app:cardElevation="4dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Campus location tracker"
                    android:textStyle="bold"
                    android:textColor="#333333"
                    android:paddingHorizontal="12dp"
                    android:paddingVertical="8dp"
                    android:background="#f5f5f5"/>

                <FrameLayout
                    android:id="@+id/map_container"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1" />
            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <!-- Check-in Success -->
        <TextView
            android:id="@+id/checkInSuccessText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Check-in completed successfully"
            android:textColor="#38A169"
            android:textSize="18sp"
            android:gravity="center"
            android:layout_marginTop="24dp"/>
    </LinearLayout>

    <!-- Button -->
    <Button
        android:id="@+id/manualCheckinButton"
        android:layout_width="0dp"
        android:layout_height="60dp"
        android:text="Manual Check-in"
        android:textColor="@android:color/white"
        app:backgroundTint="#000000"
        app:cornerRadius="12dp"
        android:textSize="18sp"
        android:layout_marginBottom="32dp"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>
